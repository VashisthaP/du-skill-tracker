{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.3.1.0",
    "metadata": {
        "description": "SkillHive â€“ DU Demand & Supply Tracker. Deploys App Service (B1), PostgreSQL Flexible Server, Storage Account, Application Insights, and Azure Communication Services Email.",
        "_sso_future": "To enable Azure AD SSO, add these parameters: azureAdClientId (string), azureAdClientSecret (securestring), azureAdTenantId (string). Then add these appSettings: AZURE_AD_CLIENT_ID, AZURE_AD_CLIENT_SECRET, AZURE_AD_TENANT_ID, AZURE_AD_REDIRECT_URI. Also uncomment SSO code in auth.py, config.py, and msal in requirements.txt."
    },
    "parameters": {
        "appName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24,
            "metadata": { "description": "Unique name for the SkillHive application (used in URLs)." }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": { "description": "Azure region (default: resource group location)." }
        },
        "postgresAdminUser": {
            "type": "string",
            "defaultValue": "skillhiveadmin",
            "metadata": { "description": "PostgreSQL administrator username." }
        },
        "postgresAdminPassword": {
            "type": "securestring",
            "metadata": { "description": "PostgreSQL administrator password (min 8 chars, mixed case + digit)." }
        }
    },
    "variables": {
        "planName": "[concat(parameters('appName'), '-plan')]",
        "webAppName": "[parameters('appName')]",
        "pgServerName": "[concat(parameters('appName'), '-pg')]",
        "pgDbName": "skillhive",
        "storageName": "[concat(replace(parameters('appName'), '-', ''), 'store')]",
        "insightsName": "[concat(parameters('appName'), '-insights')]",
        "logWorkspaceName": "[concat(parameters('appName'), '-logs')]",
        "acsName": "[concat(parameters('appName'), '-acs')]",
        "acsEmailName": "[concat(parameters('appName'), '-email')]",
        "acsDataLocation": "india"
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2022-10-01",
            "name": "[variables('logWorkspaceName')]",
            "location": "[parameters('location')]",
            "properties": { "sku": { "name": "PerGB2018" }, "retentionInDays": 30 }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[variables('insightsName')]",
            "location": "[parameters('location')]",
            "kind": "web",
            "dependsOn": [ "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logWorkspaceName'))]" ],
            "properties": {
                "Application_Type": "web",
                "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logWorkspaceName'))]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2022-09-01",
            "name": "[variables('planName')]",
            "location": "[parameters('location')]",
            "kind": "linux",
            "sku": { "name": "B1", "tier": "Basic" },
            "properties": { "reserved": true }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-09-01",
            "name": "[variables('webAppName')]",
            "location": "[parameters('location')]",
            "kind": "app,linux",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
                "[resourceId('Microsoft.Insights/components', variables('insightsName'))]",
                "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', variables('pgServerName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
                "[resourceId('Microsoft.Communication/communicationServices', variables('acsName'))]",
                "[resourceId('Microsoft.Communication/emailServices/domains', variables('acsEmailName'), 'AzureManagedDomain')]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
                "httpsOnly": true,
                "siteConfig": {
                    "linuxFxVersion": "PYTHON|3.11",
                    "alwaysOn": true,
                    "appCommandLine": "startup.sh",
                    "appSettings": [
                        { "name": "SECRET_KEY", "value": "[uniqueString(resourceGroup().id, parameters('appName'))]" },
                        { "name": "DATABASE_URL", "value": "[concat('postgresql://', parameters('postgresAdminUser'), ':', parameters('postgresAdminPassword'), '@', variables('pgServerName'), '.postgres.database.azure.com:5432/', variables('pgDbName'), '?sslmode=require')]" },
                        { "name": "AZURE_STORAGE_CONNECTION_STRING", "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2023-01-01').keys[0].value, ';EndpointSuffix=core.windows.net')]" },
                        { "name": "AZURE_STORAGE_CONTAINER", "value": "resumes" },
                        { "name": "APPINSIGHTS_INSTRUMENTATIONKEY", "value": "[reference(resourceId('Microsoft.Insights/components', variables('insightsName'))).InstrumentationKey]" },
                        { "name": "ACS_CONNECTION_STRING", "value": "[concat('endpoint=https://', variables('acsName'), '.', variables('acsDataLocation'), '.communication.azure.com/;accesskey=', listKeys(resourceId('Microsoft.Communication/communicationServices', variables('acsName')), '2023-04-01').primaryKey)]" },
                        { "name": "ACS_SENDER_ADDRESS", "value": "[concat('DoNotReply@', reference(resourceId('Microsoft.Communication/emailServices/domains', variables('acsEmailName'), 'AzureManagedDomain'), '2023-04-01').mailFromSenderDomain)]" },
                        { "name": "DEV_MODE", "value": "false" },
                        { "name": "SCM_DO_BUILD_DURING_DEPLOYMENT", "value": "true" }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.DBforPostgreSQL/flexibleServers",
            "apiVersion": "2022-12-01",
            "name": "[variables('pgServerName')]",
            "location": "[parameters('location')]",
            "sku": { "name": "Standard_B1ms", "tier": "Burstable" },
            "properties": {
                "administratorLogin": "[parameters('postgresAdminUser')]",
                "administratorLoginPassword": "[parameters('postgresAdminPassword')]",
                "version": "14",
                "storage": { "storageSizeGB": 32 },
                "backup": { "backupRetentionDays": 7, "geoRedundantBackup": "Disabled" }
            }
        },
        {
            "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
            "apiVersion": "2022-12-01",
            "name": "[concat(variables('pgServerName'), '/', variables('pgDbName'))]",
            "dependsOn": [ "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', variables('pgServerName'))]" ],
            "properties": { "charset": "UTF8", "collation": "en_US.utf8" }
        },
        {
            "type": "Microsoft.DBforPostgreSQL/flexibleServers/firewallRules",
            "apiVersion": "2022-12-01",
            "name": "[concat(variables('pgServerName'), '/AllowAzureServices')]",
            "dependsOn": [ "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', variables('pgServerName'))]" ],
            "properties": { "startIpAddress": "0.0.0.0", "endIpAddress": "0.0.0.0" }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "name": "[variables('storageName')]",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": { "name": "Standard_LRS" },
            "properties": { "supportsHttpsTrafficOnly": true, "minimumTlsVersion": "TLS1_2" }
        },
        {
            "type": "Microsoft.Communication/communicationServices",
            "apiVersion": "2023-04-01",
            "name": "[variables('acsName')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Communication/emailServices/domains', variables('acsEmailName'), 'AzureManagedDomain')]"
            ],
            "properties": {
                "dataLocation": "[variables('acsDataLocation')]",
                "linkedDomains": [
                    "[resourceId('Microsoft.Communication/emailServices/domains', variables('acsEmailName'), 'AzureManagedDomain')]"
                ]
            }
        },
        {
            "type": "Microsoft.Communication/emailServices",
            "apiVersion": "2023-04-01",
            "name": "[variables('acsEmailName')]",
            "location": "global",
            "properties": {
                "dataLocation": "[variables('acsDataLocation')]"
            }
        },
        {
            "type": "Microsoft.Communication/emailServices/domains",
            "apiVersion": "2023-04-01",
            "name": "[concat(variables('acsEmailName'), '/AzureManagedDomain')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Communication/emailServices', variables('acsEmailName'))]"
            ],
            "properties": {
                "domainManagement": "AzureManaged"
            }
        }
    ],
    "outputs": {
        "webAppUrl": { "type": "string", "value": "[concat('https://', variables('webAppName'), '.azurewebsites.net')]" },
        "webAppName": { "type": "string", "value": "[variables('webAppName')]" },
        "resourceGroupName": { "type": "string", "value": "[resourceGroup().name]" },
        "acsEndpoint": { "type": "string", "value": "[concat('https://', variables('acsName'), '.', variables('acsDataLocation'), '.communication.azure.com')]" },
        "acsName": { "type": "string", "value": "[variables('acsName')]" }
    }
}
